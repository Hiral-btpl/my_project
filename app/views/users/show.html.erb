<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>File:</strong>
  <%= link_to 'show', @user.avatar.url %>
</p>

<table>
  <tbody>
    <tr>
      <td><strong>Microposts:</strong>
      <%# @user.microposts.count %></td>
      <td><%= link_to 'Show', user_micropost_path(@user.id) %></td>
      <td><%= link_to 'Edit', edit_user_micropost_path(@user.id) %></td>
      <td><%= link_to 'Destroy', user_micropost_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Create New Micropost', new_user_micropost_path(@user.id) %></td>
    </tr>
  </tbody>
</table>

<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>

<%= render 'follow_form' %>

<%= link_to 'Back', users_path %>


<table>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
